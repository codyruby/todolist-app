<h1 class="text-center mb-4">Welcome to my todolist app</h1>
<%= render 'layouts/task_form'  %>
<div class="container">

  
  <ul class="category-title">
    <% @categories.each do  |category|%>
    <li ><%= category.title  %></li>
    <div class="card" id="delete_task">
      <ul>
        <% category.tasks.each do |task|  %>
          <div class="category-content" style="display:none">
            <div id="task_<%=task.title%>">
              <li class="active_1" id="category_<%=category.title%>" >
                <%= task.title  %>
                <% unless task.deadline.nil? %>
                  , to read: <%= task.deadline.strftime('%D')  %>
                <% end %>
                <%= check_box_tag :name, 1, CheckedOuPas? , data: { remote: true, url: TonURL, params: { id: ExampleID, status: StatusValue}.to_param, method: "put" }%>
                <%= button_to "Delete Image", task, method: :delete, remote: true, data: { confirm: "Are you sure?" } %>         
              </li>
            </div>
          </div>
        <% end %>
      </ul>
    </div>
    <% end %>
  </ul>
</div>

<%= render 'modals'  %>


